<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get CRUD</title>
  </head>

  <style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    td,
    th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }

    a {
      text-decoration: none;
      color: #000000;
    }
  </style>
  <body>
    <div class="container">
      <table>
        <tr>
          <th>Id</th>
          <th>Email</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Address</th>
          <th>Gender</th>
          <th>Role Id</th>
          <th>Phone Number</th>
          <th>Actions</th>
        </tr>
        <% for(let i=0; i < data.length; i++) { %>
        <tr>
          <td><%= data[i].id %></td>
          <td><%= data[i].email %></td>
          <td><%= data[i].firstName %></td>
          <td><%= data[i].lastName %></td>
          <td><%= data[i].address %></td>
          <td><%= data[i].gender %></td>
          <td><%= data[i].roleId %></td>
          <td><%= data[i].phoneNumber %></td>
          <td>
            <button type="button" class="btn btn-edit">
              <a class="" href="/put-crud?id=<%=data[i].id%>">Sửa</a>
            </button>
            <button type="button" class="btn btn-danger">
              <a class="" href="/delete-crud?id=<%=data[i].id%>">Xóa</a>
            </button>
          </td>
        </tr>
        <% } %>
      </table>
    </div>
  </body>
</html>
